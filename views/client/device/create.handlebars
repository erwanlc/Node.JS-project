<div id="main-content" class="container">
    <h2>Add a Device</h2>

    <form class="form-horizontal form-device form-addDevice">
        <div class="form-device">
            <label for="addDevice-UID" class="col-sm-2 control-label">Device UID :</label>

            <div class="col-sm-8">
                <input type="text" class="form-control" id="addDevice-UID" placeholder="Device UID">
            </div>
        </div>
        <div class="form-device">
            <label for="addDevice-name" class="col-sm-2 control-label">Device Name :</label>

            <div class="col-sm-8">
                <input type="text" class="form-control" id="addDevice-name" placeholder="Device name">
            </div>
        </div>
        <div class="form-device">
            <div class="col-sm-offset-2 col-sm-8">
                <button type="submit" class="btn btn-default">Add a Device</button>
            </div>
        </div>
    </form>
</div>
