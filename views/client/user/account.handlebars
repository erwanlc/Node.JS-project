<div id="main-content" class="container">
  <h2>{{user.email}}</h2>

  <div class="row">
    <div class="col-md-4"><h4>User information</h4>

      <form class="form-horizontal form-delete-user">
        <div class="form-device">
          <label for="email-user" class="col-sm-2 control-label">Email</label>
          <div class="col-sm-10">
            <input type="email" class="form-control" id="email-user" value="{{user.email}}" readonly>
          </div>
        </div>
        <div class="form-device">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" data-user-id="{{user._id}}">Delete account</button>
          </div>
        </div>
      </form>
    </div>

    <div class="col-md-4"><h4>Groups</h4>
      {{#if groups}}
        <div class="row">
          <div class="col-md-10">
            <table class="table table-striped">
              <thead>
              <tr>
                <th>Group name</th>
              </tr>
              </thead>
              <tbody>
              {{#each groups as |group|}}
                <tr>
                  <td>
                    <a href="/group/view/{{group._id}}">{{group.groupName}}</a>
                  </td>
                </tr>
              {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      {{else}}
        <div class="row">
          <div class="col-md-12">
            You don't have any group
          </div>
        </div>
      {{/if}}
      <a href="/group/create" class="btn btn-default">Create Group</a>
    </div>
  </div>
</div>