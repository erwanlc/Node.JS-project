<div id="main-content" class="container">
    <h2>Add a Group</h2>

    <form class="form-horizontal form-device form-addGroup">
        <div class="form-device">
            <label for="addGroup-name" class="col-sm-2 control-label">Group Name:</label>

            <div class="col-sm-8">
                <input type="text" class="form-control" id="addGroup-name" placeholder="Group name">
            </div>
        </div>
        <div class="form-device">
            <div class="col-sm-offset-2 col-sm-8">
                <button type="submit" class="btn btn-default">Add a Group</button>
            </div>
        </div>
    </form>
</div>
