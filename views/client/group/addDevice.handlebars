<div id="main-content" class="container">
    <h2>Add Device to {{group.name}}</h2>

    <form class="form-horizontal form-device form-addDevicetoGroup">
        <input type="hidden" value="{{group._id}}" id="addDevicetoGroup-groupId">
        <div class="form-device">
            <label for="addDevicetoGroup-deviceId" class="col-sm-2 control-label">Which Device:</label>
            <div class="col-sm-8">
                <select class="form-control" id="addDevicetoGroup-deviceId">
                    {{#each devices as |device|}}
                        <option value="{{device._id}}">{{device.deviceUID}} - {{device.deviceName}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="form-device">
            <div class="col-sm-offset-2 col-sm-8">
                <button type="submit" class="btn btn-default">Add Device to Group</button>
            </div>
        </div>
    </form>
</div>
