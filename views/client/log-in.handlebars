<div id="main-content" class="container">
  <h2>Log in</h2>

  <form class="form-horizontal form-device form-login-full">
    <div class="form-device">
      <label for="login-mail-full" class="col-sm-2 control-label">Email</label>

      <div class="col-sm-8">
        <input type="email" class="form-control" id="login-mail-full" placeholder="Email">
      </div>
    </div>
    <div class="form-device">
      <label for="login-password-full" class="col-sm-2 control-label">Password</label>

      <div class="col-sm-8">
        <input type="password" class="form-control" id="login-password-full" placeholder="Password">
      </div>
    </div>
    <div class="form-device">
      <div class="col-sm-offset-2 col-sm-8">
        <button type="submit" class="btn btn-default">Log in</button>
      </div>
    </div>
  </form>
</div>
